.site-header
  color $white
  background $teal
  background-size contain

  .title
    display inline-block
    padding 0 20px

  .link
    display inline-block
    margin 10px
    padding 10px
    color $white
    text-decoration none
    border-radius 3px
    &.active,
    &:hover
      background-color $teal

  .zooniverse-logo
    float: right
    font-size: 5em
    margin: 20px
